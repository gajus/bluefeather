  },
  "ava": {
    "require": [
      "@babel/register"
    ]
  },
  "dependencies": {
    "bluebird": "^3.5.1"
  },
  "description": "A collection of Promise utilities.",
  "devDependencies": {
    "@babel/cli": "^7.0.0-beta.46",
    "@babel/core": "^7.0.0-beta.46",
    "@babel/node": "^7.0.0-beta.46",
    "@babel/plugin-transform-flow-strip-types": "^7.0.0-beta.46",
    "@babel/preset-env": "^7.0.0-beta.46",
    "@babel/register": "^7.0.0-beta.46",
    "ava": "^1.0.0-beta.4",
    "babel-plugin-istanbul": "^4.1.6",
    "coveralls": "^3.0.1",
    "eslint": "^4.19.1",
    "eslint-config-canonical": "^9.3.2",
    "flow-bin": "^0.69.0",
    "flow-copy-source": "^1.3.0",
    "husky": "^0.14.3",
    "nyc": "^11.7.1",
    "semantic-release": "^15.3.1"
  },
  "engines": {
    "node": ">10"
  },
  "keywords": [
    "promise"
  ],
  "license": "BSD-3-Clause",
  "main": "./dist/index.js",
  "name": "bluefeather",
  "nyc": {
    "include": [
      "src/**/*.js"
    ],
    "instrument": false,
    "reporter": [
      "text-lcov"
    ],
    "require": [
      "@babel/register"
    ],
    "sourceMap": false
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/gajus/bluefeather"
  },
  "scripts": {
    "build": "rm -fr ./dist && NODE_ENV=production babel ./src --out-dir ./dist --copy-files --source-maps && flow-copy-source src dist",
    "lint": "eslint ./src && flow",
    "precommit": "npm run lint && npm run test && npm run build",
    "test": "NODE_ENV=test nyc ava --verbose --serial && nyc report"
  },
  "version": "1.0.0"
}
